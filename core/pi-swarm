    echo -e "${CYAN}Script Directory:${NC} $SCRIPT_DIR"
    echo ""
    
    echo -e "${GREEN}Available Services:${NC}"
    echo "   â€¢ Portainer: https://$MANAGER_IP:9443"
    echo "   â€¢ Grafana: http://$MANAGER_IP:3000"
    echo "   â€¢ Prometheus: http://$MANAGER_IP:9090"
    echo "   â€¢ Traefik: http://$MANAGER_IP:8081"
}

